<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/dialogbox"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/btn_lyt_roundwhite_small"
    android:gravity="center"
    android:paddingTop="30dp"
    android:paddingBottom="30dp">

    <ImageView
        android:id="@+id/dialog_ico_area"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ico_warning"/>

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그아웃 하시겠습니까?"
        android:textColor="@color/street_green_txt"
        android:textSize="16sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/dialog_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:text="앱이 종료됩니다"
        android:textColor="#686868"
        android:textSize="11sp"/>
    <TextView
        android:id="@+id/dialog_btn_y"
        android:layout_width="170dp"
        android:layout_height="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/btn_lyt_roundlinebar_green"
        android:gravity="center"
        android:text="예"
        android:textSize="12sp"
        android:textColor="@color/street_green_txt"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/dialog_btn_n"
        android:layout_width="170dp"
        android:layout_height="32dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_lyt_roundbar_green"
        android:gravity="center"
        android:text="아니오"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        />
</LinearLayout>