<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/color_bg_darkgray"
    tools:context=".RecResultActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/img_rec_result_bg_ver2" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/ResultDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2022년 11월 15일"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ResultTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오후 4:23"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="@+id/ResultDate"
            app:layout_constraintTop_toBottomOf="@+id/ResultDate" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="248dp"
            android:layout_height="1dp"
            android:layout_marginTop="30dp"
            android:background="@color/white"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ResultTime" />

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:src="@drawable/ico_camera_vector"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="촬영시간"
                android:textColor="@color/white"
                android:textSize="16dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="105dp"
                tools:layout_editor_absoluteY="211dp" />

            <TextView
                android:id="@+id/ResultLength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:text="00:02:00"
                android:textColor="@color/white"
                android:textSize="16dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="185dp"
                tools:layout_editor_absoluteY="211dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayoutPortHole"
            android:layout_width="248dp"
            android:layout_height="92dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/color_bg_orange_round"
            android:elevation="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.478"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/ico_pothole_vector" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="POTHOLE"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="도로파임"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="185dp"
                    tools:layout_editor_absoluteY="211dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/ResultPotholeCnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="50dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="185dp"
                tools:layout_editor_absoluteY="211dp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:paddingTop="15dp"
                android:text="건"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="185dp"
                tools:layout_editor_absoluteY="211dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutCrack"
            android:layout_width="248dp"
            android:layout_height="92dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/color_bg_green_round"
            android:elevation="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="26dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.478"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutPortHole"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@drawable/ico_crack_vector" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CRACK"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="도로균열"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="185dp"
                    tools:layout_editor_absoluteY="211dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/ResultCrackCnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="50dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="185dp"
                tools:layout_editor_absoluteY="211dp" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:paddingTop="15dp"
                android:text="건"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="185dp"
                tools:layout_editor_absoluteY="211dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnRecResultBack"
            android:layout_width="228dp"
            android:layout_height="40dp"
            android:layout_marginTop="42dp"
            android:background="@drawable/btn_lyt_roundblackline"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutCrack"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ico_back_vector" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="6"
                android:gravity="center"
                android:text="재촬영"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="185dp"
                tools:layout_editor_absoluteY="211dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnRecResultUpload"
            android:layout_width="228dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_lyt_roundblackline"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnRecResultBack"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ico_datalist_vector" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="데이터전송 &amp; 촬영종료"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="185dp"
                tools:layout_editor_absoluteY="211dp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>